<h2>Cart Items</h2>
<% if @cart_items.count == 0 %>
  <div>
    <p>Your cart is empty.</p>
  </div>
<% else %>
  <div>
    <table>
      <thead>
        <tr>
          <th>Name</th>
    	  <th>Quantity</th>
    	  <th>Price</th>
        <tr>
      <thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <%= link_to product_path(cart_item.product_id) do %>
              <td><%= cart_item.product.name %></td>
            <% end %>
            <td><%= cart_item.quantity %></td>
            <td>¥<%= cart_item.total_price %></td>
            <td><%= link_to cart_item_path(cart_item), data: { "turbo-method": :delete, "turbo_confirm": "Are you sure?" } do %>Delete<% end %></td>
        <% end %>
      </tbody>
    </table>
  </div>
  <span>
    <strong>Subtotal</strong>
  </span>
  <div>
    <span>
      ¥<%= @subtotal %>
   </span> 
  <div>

  <div>
    <%= link_to new_order_path do %>
      Checkout
    <% end %>
  </div>
<% end %>

<div>
  <%= link_to root_path do %>
    Find Products
  <% end %>
</div>
